                <img src="/img/{{this.product_img}}" alt="">
              </div>
              <div class="product-body">
                <p class="product-category">{{this.category}}</p>
                <h3 class="product-name"><a href="/product/{{this._id}}">{{this.product_name}}</a></h3>
