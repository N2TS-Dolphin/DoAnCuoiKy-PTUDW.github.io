      <!-- STORE -->
      <div id="store" class="col-md-9">
        <!-- store top filter -->
        <div class="store-filter clearfix">
          <div class="store-sort">
            <label>
              Sort By:
              <select class="input-select" name="sort-by" id="sort-by">
                <option value="1">Price Ascending</option>
                <option value="2">Price Descending</option>
                <option value="3">Creation time</option>
              </select>
            </label>
            <script>
              document.addEventListener('DOMContentLoaded', function () {
                const sortSelect = document.querySelector('#sort-by');
                // Lấy giá trị sort từ tham số trên URL
                const urlParams = new URLSearchParams(window.location.search);
                const selectedSortFromUrl = urlParams.get('sort');
                // Thiết lập giá trị mặc định cho dropdown sort
                if (selectedSortFromUrl) {
                  sortSelect.value = selectedSortFromUrl;
                }
                sortSelect.addEventListener('change', function () {
                  const selectedSort = sortSelect.value;
                  let sortValue;
                  // Set sortValue based on the selected option
                  sortValue = selectedSort;
                  // Get the current URL
                  const currentUrl = window.location.href;
                  // Create a URL object from the current URL
                  const url = new URL(currentUrl);
                  url.searchParams.delete('page');
                  // Set the new sort parameter
                  url.searchParams.set('sort', sortValue);
                  // Redirect to the updated URL
                  window.location.href = url.toString();
                });

              });
            </script>
            <!-- /store top filter -->

            <!-- store products -->
            <div class="row">
              <!-- product -->
              {{#each products}}
              <div class="col-md-4 col-xs-6">
                <div class="product">
                  <div class="product-img">
                    <img src="/img/{{this.product_img}}" alt="">
                  </div>
                  <div class="product-body">
                    <p class="product-category">{{this.category}}</p>
                    <h3 class="product-name"><a href="/product/{{this._id}}">{{this.product_name}}</a></h3>
                    <h4 class="product-price">${{this.price}}</h4>
                    <div class="product-rating">
                    </div>
                    <div class="product-btns">
                      <button class="add-to-wishlist"><i class="fa fa-heart-o"></i><span class="tooltipp">add to
                          wishlist</span></button>
                      <button class="add-to-compare"><i class="fa fa-exchange"></i><span class="tooltipp">add to
                          compare</span></button>
                      <button class="quick-view"><i class="fa fa-eye"></i><span class="tooltipp">quick
                          view</span></button>
                    </div>
                  </div>
                  <div class="add-to-cart">
                    <button class="add-to-cart-btn"><i class="fa fa-shopping-cart"></i> add to cart</button>
                  </div>
                </div>
              </div>
              {{/each}}
