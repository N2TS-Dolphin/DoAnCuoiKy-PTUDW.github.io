{{#sections 'js'}}
  <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
  <script>
    function HTMLreviews(reviews){
      let html = "";
      for(const review of reviews){
        html += "<li style='border-bottom: black 1px solid; padding-bottom: 10px'>" +
                  "<div class='review-heading'>" +
                    "<h5 class='name'>" + review.name + "</h5>" +
                    "<div class='review-rating'>" +
                      "<span>" + review.rating + "</span>" +
                      "<i class='fa fa-star'></i>" +
                    "</div>" +
                    "<p class='date'>" + review.creationTime + "</p>" +
                  "</div>" +
                  "<div class='review-body'>" +
                    "<p>" + review.content + "</p>" +
                  "</div>" +
                "</li>";
      }
      return html;
    }
  </script>
  <script>
    function HTMLrating(product){
      let html = "<span>Rating: " + product.rating + "</span>" +
                  "<i class='fa fa-star'></i>";
      return html;
    }
  </script>
  <script>
    function getReviews(url){
      $.ajax({
        url: url,
        method: 'GET',
        success: function (res) {
          console.log(res.product.rating)
          let html = HTMLreviews(res.reviews)
          console.log(html);
          $('.reviews').html(html);
          let htmlRating = HTMLrating(res.product)
          console.log(htmlRating)
          $('.product-rating').html(htmlRating)
        },
        error: function (err) {
          console.error(err);
        },
      });
    }
  </script>
  <script>
    $(document).ready(function () {
      $('#submit-review').on('click', function(e){
        e.preventDefault();
        const rating = $('#send-rating').val();
        const content = $('#send-content').val();
        const url = "/product/{{product._id}}/review"
        console.log(rating)
        console.log(content)
        $.post(url, {accountID: "658be1bf881362451cb95080", rating: rating, content: content})

        getReviews(url)
      });
      $('#reviews-tab').on('click', function (e) {
        e.preventDefault();
        const url = "/product/{{product._id}}/review"
        console.log(url)

        getReviews(url)
      });
    });
  </script>
