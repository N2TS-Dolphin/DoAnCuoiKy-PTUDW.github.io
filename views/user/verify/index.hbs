<!-- SECTION -->
<div class="section">
  <!-- container -->
  <div class="container">
    <!-- row -->
    <div class="row" style="width: 60%; margin: 0px auto;">
      <div class="col-sm-2" style="width: 100%; padding: 0px 10px 0px 0px;">
        <p style="text-align: center;">Xác thực</p>

        <form action="/verify" method="post">

          <div class="form-group">
            <label for="email">Email:</label>
            <input
              type="email"
              class="form-control"
              id="email"
              placeholder="Enter email"
              name="email"
            />
          </div>

          <div class="form-group">
            <label for="code">Verify Code:</label>
            <input
              type="text"
              class="form-control"
              id="text"
              placeholder="Enter verify code"
              name="code"
            />
          </div>
          
          <div style="background-color: red; margin-top: 10px;">
            {{#if hasErrors}}
              {{#each messages}}
                <span
                  class="err"
                  style="color: white; padding-left: 5px; font-size: 20px;"
                >{{this}}</span>
              {{/each}}
            {{/if}}
          </div>

          <button type="submit" class="btn btn-default">Verify</button>

        </form>
      </div>
    </div>
    <!-- /row -->
  </div>
  <!-- /container -->
</div>
<!-- /SECTION -->